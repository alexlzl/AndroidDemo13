<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.myapplication"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/drawArc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="drawArc"
                android:text="drawArc" />

            <Button
                android:id="@+id/drawBitmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="drawBitmap"
                android:text="drawBitmap" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
